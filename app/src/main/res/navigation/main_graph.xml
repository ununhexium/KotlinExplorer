<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/chapterListFragment">
    <fragment
        android:id="@+id/chapterListFragment"
        android:name="net.lab0.kotlinexplorer.framework.presentation.fragment.chapterlist.ChapterListFragment"
        android:label="ChapterListFragment">
        <action
            android:id="@+id/action_chapterListFragment_to_lessonFragment"
            app:destination="@id/lessonFragment" />
        <action
            android:id="@+id/action_chapterListFragment_to_profile_graph"
            app:destination="@id/profile_graph" />
        <action
            android:id="@+id/action_chapterListFragment_to_lessonPageFragment"
            app:destination="@id/lessonPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/lessonFragment"
        android:name="net.lab0.kotlinexplorer.framework.presentation.fragment.lesson.LessonFragment"
        android:label="LessonFragment">
        <argument
            android:name="lessonId"
            app:argType="string" />
        <action
            android:id="@+id/action_lessonFragment_self"
            app:destination="@id/lessonFragment" />
        <action
            android:id="@+id/action_lessonFragment_to_lessonFeedbackFragment"
            app:destination="@id/lessonFeedbackFragment" />
    </fragment>
    <include app:graph="@navigation/profile_graph" />
    <fragment
        android:id="@+id/lessonFeedbackFragment"
        android:name="net.lab0.kotlinexplorer.framework.presentation.activity.lessonfeedback.LessonFeedbackFragment"
        android:label="LessonFeedbackFragment" >
        <argument
            android:name="lessonId"
            app:argType="string" />
        <action
            android:id="@+id/action_lessonFeedbackFragment_to_nextLessonFragment"
            app:destination="@id/nextLessonFragment" />
    </fragment>
    <fragment
        android:id="@+id/nextLessonFragment"
        android:name="net.lab0.kotlinexplorer.framework.presentation.fragment.lesson.NextLessonFragment"
        android:label="NextLessonFragment" >
        <action
            android:id="@+id/action_nextLessonFragment_to_chapterListFragment"
            app:destination="@id/chapterListFragment" />
        <action
            android:id="@+id/action_nextLessonFragment_to_lessonFragment"
            app:destination="@id/lessonFragment" />
        <argument
            android:name="lessonId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/lessonPageFragment"
        android:name="net.lab0.kotlinexplorer.framework.presentation.fragment.lessonpage.CodeQuestionPageFragment"
        android:label="LessonPageFragment" >
        <action
            android:id="@+id/action_lessonPageFragment_self"
            app:destination="@id/lessonPageFragment" />
        <argument
            android:name="lessonId"
            app:argType="string" />
        <argument
            android:name="page"
            app:argType="integer" />
        <action
            android:id="@+id/action_lessonPageFragment_to_lessonFeedbackFragment"
            app:destination="@id/lessonFeedbackFragment" />
        <action
            android:id="@+id/action_lessonPageFragment_to_chapterListFragment"
            app:destination="@id/chapterListFragment" />
    </fragment>
</navigation>
